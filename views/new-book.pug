extends layout.pug

block head
  title New Book

block content
  h1 New Book

  include errors.pug

  form(action="/books/new", method="post")
    p
      label(for='title') Title
      input#title(name='title' type='text' value=`${book ? book.title : ''}`)
    p
      label(for='author') Author
      input#author(name='author' type='text' value=`${book ? book.author : ''}`)
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text' value=`${book ? book.genre : ''}`)
    p
      label(for='year') Year
      input#year(name='year' type='text' value=`${book ? book.year : ''}`)
    p
      input(type='submit' value='Create New Book')
    p
      a.button(href='/books') Cancel