extends layout.pug

block head
  title Books

block content
  header
    div.container
      a(href='/books')
        h1 Books
      form(action='/books' method='post')
        input#search-input(type='search' name='search' placeholder='Search...')
        label
          input#search-submit(type='submit' value='')
          svg#search-icon.search-icon(viewbox='0 0 24 24')
            path(d='M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z')
            path(fill='none' d='M0 0h24v24H0z')
      a.button(href='/books/new') Create New Book
  main
    div.container
      table
        thead
          tr
            th Title
            th Author
            th Genre
            th Year
        tbody
          each book in books
            - const {id, title, author, genre, year} = book;
            tr
              td
                a(href=`/books/${id}`)= title
              td= author
              td= genre
              td= year
      div.pagination-container
        ul
          - for (var i = 1; i <= numOfPages; i++)
            li
              a(href=`/books?page=${i}`)= i